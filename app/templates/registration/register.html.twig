{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="mb-4 border-b border-green-300">
        <h1 class="mb-2 text-4xl">Create an account</h1>
    </div>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {# {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }} #}
        {{ form_row(registrationForm.plainPassword)}}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="uppercase mt-15 bg-green-500 text-gray-100 text-lg w-full mt-10 m-auto font-extrabold py-4 px-8 rounded-3xl btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
